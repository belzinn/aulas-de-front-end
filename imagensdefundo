  <script>
    // Ano din√¢mico
    document.getElementById('year').textContent = new Date().getFullYear();

    // Tema claro/escuro
    const modeBtn = document.getElementById('modeBtn');
    const setMode = (isLight) => {
      document.documentElement.classList.toggle('light', isLight);
      modeBtn.textContent = isLight ? '‚òÄÔ∏è' : 'üåô';
      modeBtn.setAttribute('aria-pressed', String(isLight));
      localStorage.setItem('vv_theme', isLight ? 'light' : 'dark');
    };
    setMode(localStorage.getItem('vv_theme') === 'light');
    modeBtn.addEventListener('click', () => setMode(!document.documentElement.classList.contains('light')));

    // Contadores animados
    const counters = document.querySelectorAll('.num');
    const easeOut = t => 1 - Math.pow(1 - t, 3);
    const animateCounter = (el) => {
      const target = +el.dataset.target;
      const dur = 1400 + Math.random()*600;
      const start = performance.now();
      const step = (now) => {
        const p = Math.min(1, (now - start)/dur);
        el.textContent = Math.round(easeOut(p) * target).toLocaleString('pt-BR');
        if(p < 1) requestAnimationFrame(step);
      };
      requestAnimationFrame(step);
    };
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(e => { if(e.isIntersecting){ animateCounter(e.target.querySelector('.num')); io.unobserve(e.target); } });
    }, { threshold:.5 });
    document.querySelectorAll('.stat').forEach(s => io.observe(s));

    // Form simulado
    function sendMsg(ev){
      ev.preventDefault();
      const form = ev.target;
      const data = Object.fromEntries(new FormData(form).entries());
      const resp = document.getElementById('resp');
      resp.textContent = 'Obrigado, ' + data.nome + '! Sua mensagem foi recebida.';
      form.reset();
      return false;
    }
  </script>
